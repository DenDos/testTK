<%= render partial: "header" %>

<div class="col-md-6 col-sm-12 tagSpace">
  <h1>Облако тегов</h1>
  <div class="tag_cloud" id="tag_cloud">
    <% tag_cloud Post.tag_counts, %w[s m l] do |tag, css_class| %>
      <%= link_to tag.name, tag_path(tag.name), class: css_class %>
    <% end %>
  </div>
</div>

<div class="col-md-12 ">
  <% if @sort.blank? %>
   <ul>
        <%= render partial: "allPosts" %>
   </ul>
  <% else %>
    <h1>Категория: <%= @sort[0].category %></h1>
        <%= render partial: "allPosts" %>
  <% end %> 
</div>